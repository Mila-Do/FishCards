---
// Counter component with turquoise styling
---

<div class="counter-container">
  <div class="counter-card">
    <h2 class="counter-title">Counter</h2>
    <div class="counter-display" id="counter-value">0</div>
    <div class="counter-controls">
      <button class="counter-btn counter-btn-decrease" id="decrease-btn" aria-label="Decrease counter">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
      </button>
      <button class="counter-btn counter-btn-increase" id="increase-btn" aria-label="Increase counter">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  @import "tailwindcss" reference;

  .counter-container {
    @apply flex items-center justify-center min-h-[400px] p-8;
  }

  .counter-card {
    @apply bg-gradient-to-br from-teal-50 to-cyan-50 dark:from-teal-950/30 dark:to-cyan-950/30 rounded-2xl shadow-xl border border-teal-200/50 dark:border-teal-800/50 p-12 backdrop-blur-sm;
    @apply transition-all duration-300 hover:shadow-2xl;
  }

  .counter-title {
    @apply text-2xl font-semibold text-teal-800 dark:text-teal-200 text-center mb-8;
  }

  .counter-display {
    @apply text-7xl font-bold text-teal-600 dark:text-teal-400 text-center mb-10;
    @apply transition-all duration-200;
    @apply select-none;
  }

  .counter-controls {
    @apply flex items-center justify-center gap-6;
  }

  .counter-btn {
    @apply w-16 h-16 rounded-full flex items-center justify-center;
    @apply bg-teal-500 hover:bg-teal-600 active:bg-teal-700;
    @apply dark:bg-teal-600 dark:hover:bg-teal-500 dark:active:bg-teal-400;
    @apply text-white shadow-lg hover:shadow-xl;
    @apply transition-all duration-200;
    @apply focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-teal-300 dark:focus-visible:ring-teal-700;
    @apply active:scale-95;
    @apply cursor-pointer;
  }

  .counter-btn:disabled {
    @apply opacity-50 cursor-not-allowed;
  }

  .counter-btn svg {
    @apply stroke-2;
  }
</style>

<script is:inline>
  // eslint-disable-next-line
  (function () {
    let count = 0;
    const counterValue = document.getElementById("counter-value");
    const increaseBtn = document.getElementById("increase-btn");
    const decreaseBtn = document.getElementById("decrease-btn");

    if (counterValue && increaseBtn && decreaseBtn) {
      const updateDisplay = () => {
        if (counterValue) {
          counterValue.textContent = String(count);
          counterValue.style.transform = "scale(1.1)";
          setTimeout(() => {
            if (counterValue) {
              counterValue.style.transform = "scale(1)";
            }
          }, 150);
        }
      };

      increaseBtn.addEventListener("click", () => {
        count++;
        updateDisplay();
      });

      decreaseBtn.addEventListener("click", () => {
        count--;
        updateDisplay();
      });
    }
  })();
</script>
