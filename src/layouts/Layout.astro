---
/* eslint-disable */
import "../styles/global.css";

const { title = "FishCards", showAuth = true } = Astro.props;
const user = Astro.locals.user || null;
const isAuthenticated = !!user;
const userEmail = user?.email || "";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    {showAuth && (
      <header class="border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex h-14 items-center justify-between">
            <!-- Logo/Brand (left) -->
            <div class="flex items-center">
              <a href="/" class="flex items-center space-x-2 hover:opacity-80 transition-opacity">
                <div class="h-8 w-8 bg-primary rounded-md flex items-center justify-center">
                  <span class="text-primary-foreground font-bold text-sm">FC</span>
                </div>
                <span class="font-bold text-xl">FishCards</span>
              </a>
            </div>

            <!-- Main Navigation (center) - only for authenticated users -->
            {isAuthenticated && (
              <nav class="hidden md:flex items-center space-x-6" role="navigation" aria-label="Nawigacja główna">
                <a 
                  href="/generator" 
                  class="text-sm font-medium transition-colors hover:text-primary"
                  aria-current={Astro.url.pathname === '/generator' ? 'page' : undefined}
                >
                  Generator
                </a>
                <a 
                  href="/flashcards" 
                  class="text-sm font-medium transition-colors hover:text-primary"
                  aria-current={Astro.url.pathname === '/flashcards' ? 'page' : undefined}
                >
                  Moje Fiszki
                </a>
                <a 
                  href="/learning" 
                  class="text-sm font-medium transition-colors hover:text-primary"
                  aria-current={Astro.url.pathname === '/learning' ? 'page' : undefined}
                >
                  Sesja Nauki
                </a>
              </nav>
            )}

            <!-- Auth Section (right) -->
            <div class="flex items-center">
              {isAuthenticated ? (
                <div class="flex items-center space-x-3">
                  <div class="flex items-center space-x-2">
                    <div class="h-6 w-6 bg-primary rounded-full flex items-center justify-center">
                      <span class="text-primary-foreground text-xs font-medium">{userEmail.charAt(0).toUpperCase()}</span>
                    </div>
                    <span class="text-sm font-medium">{userEmail}</span>
                  </div>
                  <a 
                    href="/auth/logout" 
                    class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-8 px-3 py-1"
                  >
                    Wyloguj
                  </a>
                </div>
              ) : (
                <a 
                  href="/auth/login" 
                  class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 py-2"
                >
                  Zaloguj się
                </a>
              )}
            </div>
          </div>
        </div>
      </header>
    )}
    
    <main class="flex-1" role="main">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
